<div class="m-3 p-3 w-50">
  <h1>New Game - <strong>Current Score: <%= @current_score %></strong> </h1>
  <ul class= "letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    <div class="input-group">
      <input class="form-control w-25" type="text" name="word" placeholder="Write your word..">
      <div class="input-group-append">
        <input class="btn btn-primary" type="submit" value="Check!">
      </div>
    </div>
  </form>
</div>

